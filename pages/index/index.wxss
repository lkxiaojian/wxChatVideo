/**index.wxss**/

.userinfo {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
}

.userinfo-avatar {
  width: 81rpx;
  height: 81rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.image-video {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;  
  justify-content: center;  
}

.image-author {
  width: 50rpx;
  height: 50rpx;
  border: 0 solid #f00;
  border-radius: 50%;
  background-color: #f10b2e;
}

.text-title {
  flex-direction: column;
}

.text-type {
  flex-direction: row;
}

.text-properties {
  font-size: 0.7rem;
  color: #969696;
}

.hw-all {
  width: 100%;
  height: 100%;
  align-items: center;
}
